<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    tools:context=".fragment.DoanhThuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tungay"
            android:text="Từ ngày"
            android:background="#F30303"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tungay"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_denngay"
            android:text="Đến ngày"
            android:background="#F30303"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_denngay"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"/>
    </LinearLayout>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_doanhthu"
        android:text="Doanh thu"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="#040303"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_doanhthu"
        android:text="Doanh thu sẽ được tính ở đây"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="27sp"
        android:layout_marginTop="50dp"/>



</LinearLayout>