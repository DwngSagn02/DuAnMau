<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_marginHorizontal="20dp"
    tools:context=".fragment.ThemNguoiDungFragment">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:src="@drawable/img_logo"
        android:layout_marginVertical="30dp"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Thông Tin"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
        android:textSize="23sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_HoTen_tao"
            android:hint="Nhập họ tên"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_TenDN_tao"
            android:hint="Nhập tên đăng nhập"/>
    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txt_MatKhau_tao"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp">

            <ImageButton
                android:id="@+id/imgAn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/hide_icon"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/imgHien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/visible_icon" />
        </FrameLayout>
    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:boxStrokeWidth="0dp"
            android:hint="Xác nhận mật khẩu"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt_XNMK_tao"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp">

            <ImageButton
                android:id="@+id/imgAn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/hide_icon"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/imgHien1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/visible_icon" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_Tao"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Tạo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:backgroundTint="#2196F3"
            android:layout_marginRight="40dp"/>
        <Button
            android:id="@+id/btn_Huy"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:backgroundTint="#2196F3"/>
    </LinearLayout>

</LinearLayout>